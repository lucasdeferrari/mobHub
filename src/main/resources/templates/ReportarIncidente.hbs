{{#partial "contenido" }}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reportar Incidente</title>
    <link rel="stylesheet" type="text/css" href="/css/ReportarIncidente.css"> <!-- Enlace a tu archivo CSS personalizado -->
</head>
<body>
    <div class="container">
        <div class="report-incident-box">
            <h2>Reportar Incidente</h2>

            <form action="/incidentes/reportar" method="post" enctype="multipart/form-data">
                <div class="input-section">
                    <label for="nombre-incidente">Nombre</label>
                    <input type="text" id="nombre-incidente" placeholder="Introduzca el nombre" name="nombre-incidente" required>
                </div>

                <div class="input-section">
                    <label for="comunidad">Comunidad</label>
                    <select id="comunidad" name="comunidad">
                        {{#each comunidades}}
                            <option value="{{this}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="input-section">
                    <label for="observaciones">Observaciones</label>
                    <textarea id="observaciones" name="observaciones" placeholder="Introduzca sus observaciones" rows="4"></textarea>
                </div>
                
                <div class="input-section">
                    <label for="establecimientos">Seleccionar Establecimiento</label>
                    <select id="establecimiento" name="establecimiento" >
                        {{#each establecimientos}}
                            <option value="{{this}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="input-section">
                    <label for="servicios">Seleccionar Servicio</label>
                    <select id="servicio" name="servicio">
                        {{#each servicios}}
                            <option value="{{this}}">{{this.nombre}}</option>
                        {{/each}}
                    </select>
                </div>

              
                <div class="button-section">
                    <button type="submit">Enviar Reporte</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
{{/partial}}
{{> templates/base }}