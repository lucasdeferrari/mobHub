{{#partial "contenido"}}
    <!-- Contenido principal de tu página -->
    <link rel="stylesheet" href="/css/crearComunidad.css">
    <title>Crear Comunidad</title>
    <div class="container">
        <div class="upload-box">
            <h2>Crear Comunidad</h2>

            <form id="crearComunidadForm" action="/crear-comunidad" method="post">
                <div class="input-section">
                    <label for="nombre-comunidad">Nombre de la Comunidad:</label>
                    <input type="text" id="nombre-comunidad" placeholder="Introduzca el nombre" name="nombre-comunidad" required>
                </div>

                <div class="input-section">
                    <label for="descripcion-comunidad">Descripción de la Comunidad:</label>
                    <input type="text" id="descripcion-comunidad" placeholder="Introduzca la descripción" name="descripcion-comunidad">
                </div>

                <div class="button-section">
                    <button type="button" onclick="confirmarCreacionComunidad()">Crear Comunidad</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal de confirmación -->
    <div class="modal fade" id="confirmarComunidadModal" tabindex="-1" aria-labelledby="confirmarComunidadModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmarComunidadModalLabel">Confirmar Creación de Comunidad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="mensaje-confirmacion-comunidad"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="enviarFormularioComunidad()">Crear Comunidad</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap y otros recursos -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>

    <script>
        function confirmarCreacionComunidad() {
            const nombreComunidad = document.getElementById('nombre-comunidad').value;
            const mensaje = `¿Estás seguro de que deseas crear la comunidad con el nombre "${nombreComunidad}"?`;
            document.getElementById('mensaje-confirmacion-comunidad').innerText = mensaje;
            const confirmarComunidadModal = new bootstrap.Modal(document.getElementById('confirmarComunidadModal'));
            confirmarComunidadModal.show();
        }

        function enviarFormularioComunidad() {
            document.getElementById('crearComunidadForm').submit();
        }
    </script>
{{/partial}}
{{> templates/base }}
