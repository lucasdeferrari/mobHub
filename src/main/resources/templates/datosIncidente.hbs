            </div>

            <div class="input-section">
                <h3>{{this.quienAbrio.nombre}} por:</h3>
                <div class="info-box">Nombre del Reportante</div>
            </div>

            {{#if fechaCierre}}
                <div class="input-section">
                    <h3>{{this.quienCerro.nombre}}</h3>
                    <div class="info-box">Nombre del Encargado del Cierre</div>
                </div>
            {{/if}}


