{{#partial "contenido" }}
    <br>
    <br>
    <br>
    <link rel="stylesheet" href="/css/datosIncidente.css">
    <title>Incidente</title>

    <div class="container">
        <div class="incident-box card-deck">

            {{!-- Incidente Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Incidente</h3>
                    <div class="info-box">{{incidente.nombre}}</div>
                </div>
            </div>
            <br>
            <br>
            {{!-- Servicio Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Servicio</h3>
                    <div class="info-box">{{incidente.getServicio.getNombre}}</div>
                </div>
            </div>
            <br>
            <br>
            {{!-- Establecimiento Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Establecimiento</h3>
                    <div class="info-box">{{incidente.getEstablecimiento.getNombre}}</div>
                </div>
            </div>
            <br>
            <br>

            {{!-- Comunidad Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Comunidad</h3>
                    <div class="info-box">{{incidente.getComunidad.getNombre}}</div>
                </div>
            </div>
            <br>
            <br>
            {{!-- Observaciones del Incidente Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Observaciones del Incidente</h3>
                    <div class="info-box">{{incidente.getObservaciones}}</div>
                </div>
            </div>
            <br>
            <br>
            {{!-- Nombre del Reportante Card --}}
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Nombre del Reportante</h3>
                    <div class="info-box">{{incidente.quienAbrio.nombre}}</div>
                </div>
            </div>
            <br>
            <br>
            {{#if incidente.fechaHoraCierre}}
            {{!-- Nombre del Encargado del Cierre Card --}}
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Nombre del Encargado del Cierre</h3>
                        <div class="info-box">{{incidente.quienCerro.nombre}}</div>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>

    <!-- Scripts of Bootstrap and other resources -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <!--<script src="js/generales.js"></script>   may or may not be needed-->
{{/partial}}
{{> templates/base }}

