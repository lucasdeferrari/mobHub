<!-- Enlace a tu hoja de estilos personalizada (datosIncidente.css) -->
{{#partial "contenido"}}
    <!-- Enlace a tu hoja de estilos personalizada (datosIncidente.css) -->
    <link rel="stylesheet" href="/css/datosIncidente.css">
    <title>Incidente</title>

    <div class="container">
        <h1 class="text-center">Datos del incidente</h1> <!-- Nuevo título añadido -->

        <div class="incident-box row">

            <!-- Columna Izquierda -->
            <div class="col-md-4">

                <!-- Fecha y Hora de Apertura -->
                <div class="info-box">
                    <h3>Fecha y Hora de Apertura</h3>
                    <p>{{incidente.fechaHoraApertura}}</p>
                </div>

                <!-- Fecha y Hora de Cierre -->
                {{#if incidente.fechaHoraCierre}}
                    <div class="info-box">
                        <h3>Fecha y Hora de Cierre</h3>
                        <p>{{incidente.fechaHoraCierre}}</p>
                    </div>
                {{/if}}

                <!-- Incidente -->
                <div class="info-box">
                    <h3>Incidente</h3>
                    <p>{{incidente.nombre}}</p>
                </div>

                <!-- Servicio -->
                <div class="info-box">
                    <h3>Servicio</h3>
                    <p>{{incidente.getServicio.getNombre}}</p>
                </div>

                <!-- Establecimiento -->
                <div class="info-box">
                    <h3>Establecimiento</h3>
                    <p>{{incidente.getEstablecimiento.getNombre}}</p>
                </div>

                <!-- Comunidad -->
                <div class="info-box">
                    <h3>Comunidad</h3>
                    <p>{{incidente.getComunidad.getNombre}}</p>
                </div>

            </div>

            <!-- Columna Derecha -->
            <div class="col-md-8">

                <!-- Observaciones del Incidente -->
                <div class="info-box">
                    <h3>Observaciones del Incidente</h3>
                    <p>{{incidente.getObservaciones}}</p>
                </div>

                <!-- Nombre del Reportante -->
                <div class="info-box">
                    <h3>Nombre del Reportante</h3>
                    <p>{{incidente.quienAbrio.nombre}}</p>
                </div>

                <div class="info-box">
                    <h3>Fecha de Alta</h3>
                    <p>{{incidente.fechaHoraApertura}}</p>
                </div>

                <!-- Nombre del Encargado del Cierre -->
                {{#if incidente.fechaHoraCierre}}
                    <div class="info-box">
                        <h3>Nombre del Encargado del Cierre</h3>
                        <p>{{incidente.quienCerro.nombre}}</p>
                    </div>
                {{/if}}

            </div>
        </div>
    </div>

    <!-- Scripts de Bootstrap y otros recursos -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <!--<script src="js/generales.js"></script>   may or may not be needed-->

{{/partial}}
{{> templates/base }}
