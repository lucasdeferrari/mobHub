{{#partial "contenido" }}
    <link rel="stylesheet" href="/css/datosIncidente.css">
    <title>Incidente</title>
    <div class="container">
        <div class="incident-box">
            <h1>Incidente</h1>

            <div class="column">
                <div class="input-section">
                    <h3>Incidente:</h3>
                    <div class="info-box">{{incidente.nombre}}</div>
                </div>

                <div class="input-section">
                    <h3>Servicio:</h3>
                    <div class="info-box">{{ incidente.getServicio.getNombre}}</div>
                </div>

                <div class="input-section">
                    <h3>Establecimiento:</h3>
                    <div class="info-box">{{incidente.getEstablecimiento.getNombre}}</div>
                </div>

                <div class="input-section">
                    <h3>Nombre de la Entidad:</h3>
                    <div class="info-box">{{incidente.getEntidad.getNombre}}</div>
                </div>
            </div>

            <div class="column">
                <div class="input-section">
                    <h3>Comunidad:</h3>
                    <div class="info-box">{{incidente.getComunidad.getNombre}}</div>
                </div>

                <div class= "input-section">
                <h3>Observaciones del Incidente:</h3>
                <div class="info-box">{{incidente.getObservaciones}}</div>
            </div>

            <div class="input-section">
                <h3>Nombre del Reportante:</h3>
                <div class="info-box">{{incidente.quienAbrio.nombre}}</div>
            </div>

            {{#if incidente.fechaHoraCierre}}
                <div class="input-section">
                    <h3>Nombre del Encargado del Cierre:</h3>
                    <div class="info-box">{{incidente.quienCerro.nombre}}</div>
                </div>
            {{/if}}
        </div>
    </div>
    </div>

    <!-- Scripts of Bootstrap and other resources -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
    <!--<script src="js/generales.js"></script>   may or may not be needed-->
{{/partial}}
{{> templates/base }}