<body>
<div class="container">
    <div class="incident-box">
        <h1>Incidente</h1>

        <div class="column">
            <div class="input-section">
                <h3>{{this.Nombre}}:</h3>
                <div class="info-box">Nombre del Incidente</div>
            </div>

            <div class="input-section">
                <h3>{{this.Servicio.nombre}}:</h3>
