{{#partial "contenido" }}
    <title>Admin Usuarios</title>
    <link rel="stylesheet" type="text/css" href="/css/filtroUsuarios.css">
    <div class="container">
        <h1 class="text-center">Usuarios</h1>
        <div class="filtro-box">
            <select id="filtro">
                <option value="" disabled selected>Filtrar por...</option>
                <option value="nombre">Nombre</option>
                <option value="apellido">Apellido</option>
                <option value="rol">Rol</option>
                <option value="email">Email</option>
                <option value="validado">Autorizacion</option>
            </select>
            <input type="text" id="busqueda" placeholder="Buscar..." />
            <button id="buscar">Buscar</button>
        </div>
        <div class="table-container">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Validado</th>
                </tr>
                </thead>
                <tbody id="tabla-usuarios">
                {{#each usuarios}}
                    <tr data-id="{{this.id}}">
                        <td>{{this.nombre}}</td>
                        <td>{{this.apellido}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <select class="rol-select">
                                <option value="MIEMBRO" {{#if (eq this.rolUsuario 'MIEMBRO')}}selected{{/if}}>Miembro</option>
                                <option value="ORGANISMO_DE_CONTROL" {{#if (eq this.rolUsuario 'ORGANISMO_DE_CONTROL')}}selected{{/if}}>Organismo de Control</option>
                                <option value="ENTIDAD_PRESTADORA" {{#if (eq this.rolUsuario 'ENTIDAD_PRESTADORA')}}selected{{/if}}>Entidad Prestadora</option>
                                <option value="ADMINISTRADOR_PLATAFORMA" {{#if (eq this.rolUsuario 'ADMINISTRADOR_PLATAFORMA')}}selected{{/if}}>Administrador de Plataforma</option>
                            </select>
                            </select>
                        </td>
                        <td>
                            <select class="validado-select">
                                <option value="true" {{#if this.validado}}selected{{/if}}>Autorizado</option>
                                <option value="false" {{#unless this.validado}}selected{{/unless}}>No Autorizado</option>
                            </select>
                            </select>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <button id="agregarUsuario">Validar Usuarios</button>
    </div>
    <script src="filtrousuarios.js"></script>
{{/partial}}
{{> templates/base }}
