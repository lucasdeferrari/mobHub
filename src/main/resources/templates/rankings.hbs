{{#partial "contenido"}}
    <!-- Enlace a tu hoja de estilos personalizada (rankings.css) -->
    <link rel="stylesheet" href="/css/rankings.css">
    <title>Rankings</title>
    <!-- Contenido principal de tu página -->
    <main class="flex-shrink-0">
        <div class="incidents-box container">
            <h1 class="text-center">Rankings</h1>

            <!-- Menú desplegable para elegir ranking -->
            <div class="d-flex justify-content-center mt-3">
                <div class="bg-light-blue p-3 rounded">
                    <label for="rankingOptions">Elegir Ranking:</label>
                    <select id="rankingOptions" class="form-select">
                        <option value="Ranking 1">Opción 1</option>
                        <option value="Ranking 2">Opción 2</option>
                        <option value="Ranking 3">Opción 3</option>
                    </select>
                </div>
            </div>

            <!-- Contenedor para la lista de rankings -->
            <div id="rankings-list" class="bg-light-blue p-3 rounded" style="max-height: 400px; overflow-y: auto;">
                <ul class="list-unstyled">
                    <!-- Elementos de la lista se llenarán aquí dinámicamente con Handlebars -->
                </ul>
            </div>
        </div>

        <!-- Scripts de Bootstrap y otros recursos -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
        <script id="ranking-template" type="text/x-handlebars-template">
            {{#each rankings2}}
                <li>{{}}. {{this.nombre}}</li>
            {{/each}}
        </script>
        <script>
            // Función para llenar la lista con datos del ranking usando Handlebars
            function llenarListaRanking(data) {
                var source = document.getElementById("ranking-template").innerHTML;
                var template = Handlebars.compile(source);
                var listaHTML = template({ rankings2: data });

                var lista = document.getElementById("rankings-list").getElementsByTagName('ul')[0];
                lista.innerHTML = listaHTML;
            }

            document.addEventListener('DOMContentLoaded', function() {
                // Llenar la lista con datos del ranking
                llenarListaRanking({{json rankings2}});
            });
        </script>
    </main>
{{/partial}}
{{> templates/base }}
